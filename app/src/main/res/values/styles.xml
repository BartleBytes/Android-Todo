<resources>

    <!-- Style for the Title TextView -->
    <style name="TitleTextStyle">

        <item name="android:textSize">40sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:maxLines">1</item> <!-- Optional: if you want to limit title length -->
        <item name="android:ellipsize">end</item> <!-- Optional: truncate long titles with "..." -->
    </style>

    <!-- Style for Buttons -->
    <style name="ButtonStyle">

        <item name="android:textColor">@android:color/white</item>
        <item name="android:backgroundTint">@android:color/holo_blue_dark</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>


    </style>

    <!-- Style for the ScrollView -->
    <style name="ScrollViewStyle">
        <item name="android:layout_marginBottom">80dp</item>
        <item name="android:padding">16dp</item> <!-- Optional padding for the content inside ScrollView -->
        <item name="android:scrollbars">none</item> <!-- Keep scrollbars hidden, unless needed -->
    </style>

    <!-- Style for the container LinearLayout -->
    <style name="LinearLayoutStyle">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">16dp</item>
        <item name="android:dividerHeight">1dp</item> <!-- Optional: set divider height -->
        <item name="android:background">@android:color/white</item> <!-- Optional background -->
    </style>

</resources>
